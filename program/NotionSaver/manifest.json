{
    "manifest_version": 3,
    "name": "Notion Saver",
    "version": "1.0",
    "description": "Save articles to Notion.",
    "permissions": [
        "activeTab",
        "storage",
         "scripting"
    ],
     "host_permissions": [
     "https://api.notion.com/*"
     ],
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    }
}